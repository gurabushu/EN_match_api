#エンジニア情報編集ページ
#プロフィール画面


<section class="intro-wrapper">

<h1>プロフィール編集</h1>

<div class="user-intro-wrapper">
<%= form_with(model: @user, local: true) do |f| %>
    <%= f.label :name, "ユーザー名" %>
    <%= f.text_field :name %>
    <%= f.label :skill, "スキル" %>
    <%= f.text_field :skill %>
    <%= f.label :description, "自己紹介" %>
    <%= f.text_area :description %>
    <%= f.submit "更新" %>
<% end %>
</div>

<%= link_to "戻る", user_path(@user), class: "btn btn-primary" %>
<%= link_to "編集", edit_user_path(@user), class: "btn btn-secondary" %>
<%= link_to "削除", user_path(@user), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>

</section>
