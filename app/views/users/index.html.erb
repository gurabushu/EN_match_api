<h1 class="page-title">アカウント情報</h1>
<section class="intro-wrapper">
  <h2>アカウント情報</h2>
  <div class="form-group">
    <p>ユーザー名: <%= @user.name %></p>
    <p>スキル: <%= @user.skill %></p>
    <p>自己紹介: <%= @user.description %></p>
    <p>登録日: <%= @user.created_at.strftime("%Y年%m月%d日") %></p>
  </div>

  <div class="navigation">
    <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-secondary" %>
    <%= button_to "アカウント削除", user_path(@user), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
  </div>
  <div class="back-btn">
    <%= link_to "戻る", root_path, class: "btn-element" %>
  </div>
</section>