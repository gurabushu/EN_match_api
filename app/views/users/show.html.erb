
<section class="intro-wrapper">

<h1 class="page-title"><%= @user.name %>さんのプロフィール </h1>

<div class="form-group">
<p>ユーザー名: <%= @user.name %></p>
<p> スキル: <%= @user.skill %></p>
<p> 自己紹介：<%= @user.description %></p>
<p> 登録日： <%= @user.created_at.strftime("%Y年%m月%d日") %></p>
</div>

<div class="back-btn">
<%= link_to "戻る", root_path, class: "btn-element" %>
<%= link_to "編集", edit_user_path(@user), class: "btn-element" %>
</div>
</section>